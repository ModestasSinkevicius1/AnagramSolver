@{
    ViewData["Title"] = "Dictionary Page";
    
    var words = ViewData["Words"] as List<string>;  
}

<div class="container">
    <div>
        @using (Html.BeginForm("SearchWord", null, FormMethod.Post))
        {
            <input type="search" value="Search" name="searchWord" class="badge-light rounded form-group" />
        }
    </div>
    <div>
        @foreach (var word in words)
        {
            <h1 class="page-link text-center rounded">@Html.ActionLink(word, "Index", @"Home", new { myWords = word }, null)</h1>
        }
    </div>
</div>

